@{
    ViewData["Title"] = "Zahtjev uspješno poslat";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <!-- Glavni success card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center p-5">
                    <!-- Zeleni krug sa smooth emoji -->
                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle" 
                             style="width: 100px; height: 100px; background: linear-gradient(135deg, #28a745, #20c997);">
                            <span style="font-size: 3rem;">✅</span>
                        </div>
                    </div>
                    
                    <!-- Veliki naslov -->
                    <h1 class="fw-bold text-dark mb-4" style="font-size: 2.5rem;">Zahtjev uspješno poslat!</h1>
                    
                    <!-- Manji tekst opisa -->
                    <div class="bg-light rounded p-4 mb-4">
                        <p class="mb-0 text-muted">
                            Hvala vam što ste kontaktirali <span class="fw-bold" style="color: #ff66cc;">Carisma</span> podršku.<br>
                            Vaš zahtjev je primljen i naš tim će vam odgovoriti u najkraćem roku.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Šta slijedi - sa smooth emoji -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle p-3 me-3" style="background: linear-gradient(135deg, #ff66cc, #ff99dd);">
                            <span style="font-size: 1.5rem;">🚀</span>
                        </div>
                        <div>
                            <h6 class="fw-bold text-dark mb-1">Šta slijedi?</h6>
                            <p class="mb-0 text-muted small">
                                Naš tim će pregledati vaš zahtjev i kontaktirati vas kroz odgovarajuće kanale komunikacije.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Akcije - Moji zahtjevi i Početna stranica sa smooth emojijima -->
            <div class="row g-3 mb-4">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Za registrovane korisnike -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px; background: linear-gradient(135deg, #ff66cc, #ff99dd);">
                                        <span style="font-size: 1.8rem;">📋</span>
                                    </div>
                                </div>
                                <h6 class="fw-bold text-dark mb-2">Moji zahtjevi</h6>
                                <p class="text-muted small mb-3">
                                    Pogledajte status vaših zahtjeva i komunikaciju sa podrškom
                                </p>
                                <a asp-controller="Podrska" asp-action="Index" 
                                   class="btn btn-lg w-100" 
                                   style="background-color: #ff66cc; color: white; border: none;">
                                    <span class="me-2">👀</span>Pogledaj zahtjeve
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px; background: linear-gradient(135deg, #6c757d, #adb5bd);">
                                        <span style="font-size: 1.8rem;">🏠</span>
                                    </div>
                                </div>
                                <h6 class="fw-bold text-dark mb-2">Početna stranica</h6>
                                <p class="text-muted small mb-3">
                                    Istražite naše rent-a-car usluge
                                </p>
                                <a asp-controller="Home" asp-action="Index" 
                                   class="btn btn-outline-secondary btn-lg w-100">
                                    <span class="me-2">🚙</span>Početna stranica
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Za neregistrovane korisnike -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px; background: linear-gradient(135deg, #ff66cc, #ff99dd);">
                                        <span style="font-size: 1.8rem;">👨‍💼</span>
                                    </div>
                                </div>
                                <h6 class="fw-bold text-dark mb-2">Registrujte se</h6>
                                <p class="text-muted small mb-3">
                                    Za lakše praćenje budućih zahtjeva i brži servis
                                </p>
                                <a asp-area="Identity" asp-page="/Account/Register" 
                                   class="btn btn-lg w-100" 
                                   style="background-color: #ff66cc; color: white; border: none;">
                                    <span class="me-2">⭐</span>Kreiraj nalog
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px; background: linear-gradient(135deg, #6c757d, #adb5bd);">
                                        <span style="font-size: 1.8rem;">🏠</span>
                                    </div>
                                </div>
                                <h6 class="fw-bold text-dark mb-2">Početna stranica</h6>
                                <p class="text-muted small mb-3">
                                    Istražite naše rent-a-car usluge
                                </p>
                                <a asp-controller="Home" asp-action="Index" 
                                   class="btn btn-outline-secondary btn-lg w-100">
                                    <span class="me-2">🚙</span>Početna stranica
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Očekivano vrijeme odgovora sa smooth emoji -->
            <div class="card shadow-sm border-0 mb-4" style="border-left: 4px solid #ff66cc !important;">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-dark mb-3">
                        <span class="me-2" style="color: #ff66cc;">⏱️</span>Očekivano vrijeme odgovora
                    </h6>
                    <div class="row text-center">
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 bg-light rounded">
                                <div class="mb-2">
                                    <span style="font-size: 1.5rem;">🔴</span>
                                </div>
                                <div class="fw-bold text-danger mb-1">Do 2h</div>
                                <small class="text-muted">Kritična</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 bg-light rounded">
                                <div class="mb-2">
                                    <span style="font-size: 1.5rem;">🟠</span>
                                </div>
                                <div class="fw-bold text-warning mb-1">Do 8h</div>
                                <small class="text-muted">Visoka</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 bg-light rounded">
                                <div class="mb-2">
                                    <span style="font-size: 1.5rem;">⏰</span>
                                </div>
                                <div class="fw-bold text-primary mb-1">Do 24h</div>
                                <small class="text-muted">Srednja</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="p-3 bg-light rounded">
                                <div class="mb-2">
                                    <span style="font-size: 1.5rem;">🌱</span>
                                </div>
                                <div class="fw-bold text-success mb-1">Do 3 dana</div>
                                <small class="text-muted">Niska</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Datum slanja - sa smooth kalendar emoji -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="rounded-circle p-3 me-3" style="background: linear-gradient(135deg, #ff66cc, #ff99dd);">
                            <span style="font-size: 1.5rem;">📅</span>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold text-dark">Datum slanja</div>
                            <div class="text-muted">@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Hvala poruka - sa smooth emoji -->
            <div class="card shadow-sm border-0 text-center" style="background: linear-gradient(135deg, #f8f9fa, #ffe6f5);">
                <div class="card-body p-4">
                    <div class="mb-2">
                    </div>
                    <h6 class="fw-bold mb-0" style="color: #ff66cc; font-size: 1.1rem;">
                        Hvala što birate Carisma
                    </h6>
                    <small class="text-muted d-block mt-2">
                        
                        Vaše povjerenje je naša motivacija
                       
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .btn {
        transition: all 0.2s ease-in-out;
    }
    
    .btn:hover {
        transform: translateY(-1px);
    }
    
    .rounded-circle {
        transition: all 0.3s ease-in-out;
    }
    
    .card:hover .rounded-circle {
        transform: scale(1.05);
    }
</style>