    .timeline-card,
    .pricing-card,
    .customer-card,
    .info-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(255, 105, 180, 0.12);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .vehicle-card:hover,
    .timeline-card:hover,
    .pricing-card:hover,
    .customer-card:hover,
    .info-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(255, 105, 180, 0.18);
    }

    .card-header {
        padding: 1.5rem 1.5rem 1rem;
        border-bottom: 1px solid rgba(255, 105, 180, 0.1);
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1e293b;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .card-title i {
        color: #ff69b4;
        font-size: 1rem;
    }

    .card-content {
        padding: 1.5rem;
    }

    /* Vehicle Showcase */
    .vehicle-showcase {
        text-align: center;
    }

    .vehicle-image {
        width: 120px;
        height: 120px;
        margin: 0 auto 1rem;
        border-radius: 16px;
        overflow: hidden;
        position: relative;
    }

    .vehicle-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .vehicle-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #ff69b4, #ff1493);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
    }

    .vehicle-name {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
