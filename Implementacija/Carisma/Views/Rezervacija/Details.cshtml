        font-size: 1.1rem;
    }

    .status-info {
        display: flex;
        flex-direction: column;
        text-align: right;
    }

    .status-label {
        font-size: 0.875rem;
        opacity: 0.8;
        margin-bottom: 0.25rem;
    }

    .status-text {
        font-size: 1.1rem;
        font-weight: 600;
    }

    /* Content Grid */
