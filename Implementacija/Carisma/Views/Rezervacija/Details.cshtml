        background: linear-gradient(135deg, #ff6b9d 0%, #c44569 50%, #f8b500 100%);
        min-height: 100vh;
        padding: 2rem 0;
        padding-bottom: 100px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .container {
