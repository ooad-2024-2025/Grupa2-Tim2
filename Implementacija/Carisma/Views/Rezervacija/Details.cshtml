        position: relative;
        margin-bottom: 1.5rem;
        padding-left: 1rem;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-marker {
        position: absolute;
        left: -1.5rem;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
