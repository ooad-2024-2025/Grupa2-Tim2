    .timeline-content {
        padding-top: 0.25rem;
    }

    .timeline-content h5 {
        font-size: 1rem;
        font-weight: 600;
        color: #1e293b;
        margin: 0 0 0.25rem 0;
    }

    .timeline-content p {
        font-size: 0.875rem;
        color: #64748b;
        margin: 0 0 0.25rem 0;
    }

    .timeline-content small {
        font-size: 0.75rem;
        color: #94a3b8;
    }

    /* Pricing */
    .pricing-details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .pricing-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
    }

    .pricing-row.subtotal {
        border-top: 1px solid #e2e8f0;
        padding-top: 1rem;
    }

    .pricing-row.total {
        border-top: 2px solid #ff69b4;
        padding-top: 1rem;
        background: rgba(255, 105, 180, 0.05);
        margin: 0 -1.5rem -1.5rem;
