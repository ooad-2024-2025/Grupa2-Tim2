@model Carisma.Models.Rezervacija

@{
    ViewData["Title"] = "Plaćanje uspješno";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-check-circle me-2"></i>
                        Plaćanje uspješno završeno!
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h5 class="text-success mb-3">Vaša rezervacija je potvrđena!</h5>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <strong>Vozilo:</strong><br>
                            @Model.vozilo.Marka @Model.vozilo.Model
                        </div>
                        <div class="col-md-6">
                            <strong>Period:</strong><br>
                            @Model.datumPocetka.ToString("dd.MM.yyyy") - @Model.datumZavrsetka.ToString("dd.MM.yyyy")
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <strong>Sljedeći koraci:</strong><br>
                        Možete preuzeti vozilo na dan početka rezervacije.
                        Molimo donesite važeću vozačku dozvolu i sredstva za depozit.
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-list me-2"></i>Moje rezervacije
                        </a>
                        <a asp-controller="Vozilo" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-car me-2"></i>Pogledaj druga vozila
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>