    <script>
        // Year validation
        document.querySelector('input[name="Godina"]').addEventListener('input', function (e) {
            let value = parseInt(e.target.value);
            let currentYear = new Date().getFullYear();
            
            if (value < 1990) {
                e.target.value = 1990;
            } else if (value > currentYear + 1) {
                e.target.value = currentYear + 1;
            }
        });

        // Price validation
        document.querySelector('input[name="CijenaPoDanu"]').addEventListener('input', function (e) {
            let value = parseFloat(e.target.value);
            if (value < 0) {
                e.target.value = 0;
            }
        });

        // Form enhancement - auto-capitalize model input
        document.querySelector('input[name="Model"]').addEventListener('input', function (e) {
            // Capitalize first letter of each word
            e.target.value = e.target.value.replace(/\b\w/g, l => l.toUpperCase());
        });
    </script>
