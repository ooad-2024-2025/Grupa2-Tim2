@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // formatiranje cijene
            const priceInput = document.querySelector('input[name="CijenaPoDanu"]');
            if (priceInput) {
                priceInput.addEventListener('input', function(e) {
                    let value = parseFloat(e.target.value);
                    if (!isNaN(value) && value >= 0) {
                        e.target.value = value.toFixed(2);
                    }
                });
            }

            // validacija za godinu
            const yearInput = document.querySelector('input[name="Godina"]');
            if (yearInput) {
                yearInput.addEventListener('input', function(e) {
                    let value = parseInt(e.target.value);
                    if (value < 1990) {
                        e.target.value = 1990;
                    } else if (value > 2025) {
                        e.target.value = 2025;
                    }
                });
            }

            // detekcija promjena u formi
            let originalFormData = new FormData(document.querySelector('.premium-vehicle-edit-form'));
            
            function hasFormChanged() {
                let currentFormData = new FormData(document.querySelector('.premium-vehicle-edit-form'));
                for (let [key, value] of originalFormData.entries()) {
                    if (currentFormData.get(key) !== value) {
                        return true;
                    }
                }
                return false;
            }

            // prikazati upozorenje pri napuštanju stranice ako postoje promjene u formi


            window.addEventListener('beforeunload', function(e) {
                if (hasFormChanged()) {
                    e.preventDefault();
                    e.returnValue = 'Imate nesačuvane izmjene. Jeste li sigurni da želite napustiti stranicu?';
                }
            });

            // ukloni upozorenje kada je forma poslata
            document.querySelector('.premium-vehicle-edit-form').addEventListener('submit', function() {
                window.removeEventListener('beforeunload', arguments.callee);
            });
        });
    </script>
