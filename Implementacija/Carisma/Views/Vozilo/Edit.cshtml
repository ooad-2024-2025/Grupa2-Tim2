@model Carisma.Models.Vozilo

@{
    ViewData["Title"] = "Izmijeni vozilo";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- kartica za edit vozila -->
            <div class="premium-vehicle-edit-card">
                <!-- Zaglavlje -->
                <div class="premium-vehicle-edit-header">
                    <div class="header-pattern"></div>
                    <div class="header-content">
                        <div class="vehicle-avatar-edit">
                            <i class="fas fa-car"></i>
                            <div class="edit-badge">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                        <div class="header-info">
                            <h1 class="edit-title">
                                <i class="fas fa-tools"></i>
                                Izmijeni vozilo
                            </h1>
                            <p class="edit-subtitle">Ažuriranje informacija o vozilu</p>
                            <div class="edit-meta">
                                <span class="meta-item">
                                    <i class="fas fa-hashtag"></i>
                                    ID: @Model.Id
                                </span>
                                <span class="meta-item">
                                    <i class="fas fa-car"></i>
                                    @Model.Marka @Model.Model
                                </span>
                                <span class="meta-item">
                                    <i class="fas fa-calendar"></i>
                                    @Model.Godina
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notifikacije -->
                <div class="notifications-container">
                    @if (TempData["Poruka"] != null)
                    {
                        <div class="notification success">
                            <div class="notification-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="notification-content">
                                <div class="notification-title">Uspješno!</div>
                                <div class="notification-message">@TempData["Poruka"]</div>
                            </div>
                            <button class="notification-close" data-bs-dismiss="alert">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    }

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="notification error">
                            <div class="notification-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="notification-content">
                                <div class="notification-title">Greška!</div>
                                <div class="notification-message">Molimo ispravite greške u formi.</div>
                            </div>
                            <button class="notification-close" data-bs-dismiss="alert">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    }
                </div>

                
                <div class="premium-vehicle-edit-body">
                    <form asp-action="Edit" method="post" class="premium-vehicle-edit-form">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row g-4">
                            <!-- sekcija sa detaljima o vozilu -->
                            <div class="col-lg-6">
                                <div class="form-section">
                                    <div class="section-header">
                                        <div class="section-icon vehicle-details">
                                            <i class="fas fa-car"></i>
                                        </div>
                                        <h3 class="section-title">Osnovni podaci vozila</h3>
                                    </div>
                                    
                                    <div class="section-content">
                                        <!-- Marka vizila -->
                                        <div class="form-group">
                                            <label asp-for="Marka" class="form-label">
                                                <i class="fas fa-tag"></i>
                                                <span>Marka vozila</span>
                                                <span class="required">*</span>
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="Marka" class="form-control premium" placeholder="Unesite marku vozila" />
                                                <div class="input-icon">
                                                    <i class="fas fa-tag"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Marka" class="validation-error"></span>
                                            <div class="form-help">
                                                <i class="fas fa-info-circle"></i>
                                                Unesite naziv marke vozila (npr. BMW, Mercedes, Audi)
                                            </div>
                                        </div>

                                        <!-- Model vozila -->
                                        <div class="form-group">
                                            <label asp-for="Model" class="form-label">
                                                <i class="fas fa-car-side"></i>
                                                <span>Model vozila</span>
                                                <span class="required">*</span>
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="Model" class="form-control premium" placeholder="Unesite model vozila" />
                                                <div class="input-icon">
                                                    <i class="fas fa-car-side"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Model" class="validation-error"></span>
                                            <div class="form-help">
                                                <i class="fas fa-info-circle"></i>
                                                Unesite tačan naziv modela vozila
                                            </div>
                                        </div>

                                        <!-- Godina proizvodnje -->
                                        <div class="form-group">
                                            <label asp-for="Godina" class="form-label">
                                                <i class="fas fa-calendar"></i>
                                                <span>Godina proizvodnje</span>
                                                <span class="required">*</span>
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="Godina" type="number" class="form-control premium" min="1990" max="2025" placeholder="2024" />
                                                <div class="input-icon">
                                                    <i class="fas fa-calendar"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Godina" class="validation-error"></span>
                                            <div class="form-help">
                                                <i class="fas fa-info-circle"></i>
                                                Godina mora biti između 1990 i 2025
                                            </div>
                                        </div>

                                        <!-- Trenutni status -->
                                        <div class="form-group">
                                            <label class="form-label">
                                                <i class="fas fa-info-circle"></i>
                                                <span>Trenutni status</span>
                                            </label>
                                            <div class="current-status-display">
                                                @if (Model.Status == 0)
                                                {
                                                    <div class="status-indicator current available">
                                                        <i class="fas fa-check-circle"></i>
                                                        <span>Dostupno za iznajmljivanje</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="status-indicator current unavailable">
                                                        <i class="fas fa-times-circle"></i>
                                                        <span>Nedostupno</span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Detalji za iznajmljivanje -->
                            <div class="col-lg-6">
                                <div class="form-section">
                                    <div class="section-header">
                                        <div class="section-icon rental-details">
                                            <i class="fas fa-dollar-sign"></i>
                                        </div>
                                        <h3 class="section-title">Detalji za iznajmljivanje</h3>
                                    </div>
                                    
                                    <div class="section-content">
                                        <!-- Cijena po danu -->
                                        <div class="form-group">
                                            <label asp-for="CijenaPoDanu" class="form-label">
                                                <i class="fas fa-money-bill"></i>
                                                <span>Cijena po danu</span>
                                                <span class="required">*</span>
                                            </label>
                                            <div class="input-wrapper price-input">
                                                <input asp-for="CijenaPoDanu" type="number" step="0.01" min="0" class="form-control premium price" placeholder="50.00" />
                                                <div class="input-icon">
                                                    <i class="fas fa-money-bill"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="CijenaPoDanu" class="validation-error"></span>
                                            <div class="form-help">
                                                <i class="fas fa-info-circle"></i>
                                                Unesite cijenu u bosanskim markama (BAM)
                                            </div>
                                        </div>

                                        <!-- Vlasnik -->
                                        <div class="form-group">
                                            <label asp-for="OsobaId" class="form-label">
                                                <i class="fas fa-user"></i>
                                                <span>Vlasnik vozila</span>
                                                <span class="required">*</span>
                                            </label>
                                            <div class="select-wrapper">
                                                <select asp-for="OsobaId" class="form-select premium" asp-items="ViewBag.OsobaId">
                                                    <option value="">Izaberite vlasnika</option>
                                                </select>
                                                <div class="select-icon">
                                                    <i class="fas fa-chevron-down"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="OsobaId" class="validation-error"></span>
                                            <div class="current-owner">
                                                <i class="fas fa-user-check"></i>
                                                Trenutni vlasnik: 
                                                <span class="owner-name">@(ViewBag.CurrentOwner ?? "Nije postavljen")</span>
                                            </div>
                                        </div>

                                        <!-- Status vozila -->
                                        <div class="form-group">
                                            <label asp-for="Status" class="form-label">
                                                <i class="fas fa-flag"></i>
                                                <span>Novi status vozila</span>
                                                <span class="required">*</span>
                                            </label>
                                            <div class="status-container">
                                                <div class="status-wrapper">
                                                    <input class="status-input" type="radio" asp-for="Status" value="0" id="statusAvailable" />
                                                    <label class="status-label available" for="statusAvailable">
                                                        <span class="status-indicator">
                                                            <span class="status-icon">
                                                                <i class="fas fa-check"></i>
                                                            </span>
                                                        </span>
                                                        <div class="status-text">
                                                            <span class="status-title">Dostupno</span>
                                                            <span class="status-desc">Vozilo je spremno za iznajmljivanje</span>
                                                        </div>
                                                    </label>
                                                </div>
                                                
                                                <div class="status-wrapper">
                                                    <input class="status-input" type="radio" asp-for="Status" value="1" id="statusUnavailable" />
                                                    <label class="status-label unavailable" for="statusUnavailable">
                                                        <span class="status-indicator">
                                                            <span class="status-icon">
                                                                <i class="fas fa-times"></i>
                                                            </span>
                                                        </span>
                                                        <div class="status-text">
                                                            <span class="status-title">Nedostupno</span>
                                                            <span class="status-desc">Vozilo trenutno nije dostupno</span>
                                                        </div>
                                                    </label>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Status" class="validation-error"></span>
                                            <div class="form-help">
                                                <i class="fas fa-info-circle"></i>
                                                Odaberite novi status vozila
                                            </div>
                                        </div>

                                        <!-- Pregled izmjena -->
                                        <div class="change-summary">
                                            <div class="summary-header">
                                                <i class="fas fa-history"></i>
                                                <span>Pregled izmjena</span>
                                            </div>
                                            <div class="summary-content">
                                                <div class="summary-item">
                                                    <span class="summary-label">Poslednja izmjena:</span>
                                                    <span class="summary-value">2025-06-18 02:05:02</span>
                                                </div>
                                                <div class="summary-item">
                                                    <span class="summary-label">Korisnik:</span>
                                                    <span class="summary-value">aislamovic1</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- nazad na listu -->
                        <div class="actions-section">
                            <div class="actions-container">
                                <div class="actions-left">
                                    <a asp-action="Index" class="btn-secondary-custom">
                                        <i class="fas fa-arrow-left"></i>
                                        <span>Nazad na listu</span>
                                    </a>
                                </div>
                                
                                <div class="actions-right">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn-info-custom">
                                        <i class="fas fa-eye"></i>
                                        <span>Pregled</span>
                                    </a>
                                    <button type="submit" class="btn-primary-custom">
                                        <i class="fas fa-save"></i>
                                        <span>Sačuvaj izmjene</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Vehicle Edit Theme - Glavna boja: #b16189 sa automotive akcentima */
    :root {
        /*  glavna pink nijansa #b16189 */
        --primary-rose: #b16189;           /*  glavna boja */
        --primary-rose-light: #d4a5c7;    /* Svetlija verzija */
        --primary-rose-dark: #8e4c6b;     /* Tamnija verzija */
        --primary-rose-subtle: #f5f1f3;   /* Vrlo bleda */
        
        /* Automotive colors */
        --automotive-blue: #2563eb;       /* Premium blue */
        --automotive-blue-light: #60a5fa; /* Light blue */
        --automotive-blue-subtle: #eff6ff; /* Very light blue */
        --automotive-blue-dark: #1d4ed8;  /* Dark blue */
        
        --automotive-orange: #ea580c;     /* Orange accent */
        --automotive-orange-light: #fb923c;
        --automotive-orange-subtle: #fff7ed;
        --automotive-orange-dark: #c2410c;
        
        
        --success-green: #059669;
        --success-light: #d1fae5;
        --success-dark: #047857;
        
        --warning-yellow: #d97706;
        --warning-light: #fef3c7;
        --warning-dark: #92400e;
        
        --error-red: #dc2626;
        --error-light: #fee2e2;
        --error-dark: #991b1b;
        
        /* Neutral colors */
        --white: #ffffff;
        --cream: #fefdfb;
        --light-gray: #f8fafc;
        --gray-100: #f1f5f9;
        --gray-200: #e2e8f0;
        --gray-300: #cbd5e1;
        --gray-400: #94a3b8;
        --gray-500: #64748b;
        --gray-600: #475569;
        --gray-700: #334155;
        --gray-800: #1e293b;
        --gray-900: #0f172a;
        
        /* Text boje */
        --text-primary: #1e293b;
        --text-secondary: #475569;
        --text-muted: #64748b;
        --text-inverse: #ffffff;
        
        /* Gradijenti */
        --gradient-main: linear-gradient(135deg, var(--primary-rose) 0%, var(--automotive-orange) 100%);
        --gradient-vehicle: linear-gradient(135deg, var(--automotive-blue) 0%, var(--primary-rose) 100%);
        --gradient-rental: linear-gradient(135deg, var(--automotive-orange) 0%, var(--primary-rose-light) 100%);
        --gradient-success: linear-gradient(135deg, var(--success-green) 0%, #059669 100%);
        --gradient-info: linear-gradient(135deg, var(--automotive-blue) 0%, var(--automotive-blue-dark) 100%);
        
        /* Senke */
        --shadow-main: 0 4px 20px rgba(177, 97, 137, 0.15);
        --shadow-automotive: 0 4px 20px rgba(37, 99, 235, 0.15);
        --shadow-orange: 0 4px 20px rgba(234, 88, 12, 0.15);
        --shadow-success: 0 4px 20px rgba(5, 150, 105, 0.15);
        --shadow-light: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        
        /* Tranzicije */
        --transition-fast: 0.15s ease;
        --transition-normal: 0.2s ease;
        --transition-slow: 0.3s ease;
        
        /* Border radius */
        --radius-sm: 0.375rem;
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
        --radius-2xl: 1.5rem;
        
        /* razmaci */
        --space-xs: 0.25rem;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 1.5rem;
        --space-xl: 2rem;
        --space-2xl: 3rem;
    }

    
    .premium-vehicle-edit-card {
        background: var(--white);
        border-radius: var(--radius-2xl);
        box-shadow: var(--shadow-xl);
        border: 1px solid var(--gray-200);
        overflow: hidden;
        margin-bottom: var(--space-xl);
    }

    /* Premium Header sa edit temom */
    .premium-vehicle-edit-header {
        position: relative;
        background: var(--gradient-main);
        padding: var(--space-2xl);
        color: var(--white);
        overflow: hidden;
    }

    .header-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 40% 60%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
        pointer-events: none;
    }

    .header-content {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: var(--space-xl);
    }

    .vehicle-avatar-edit {
        width: 80px;
        height: 80px;
        border-radius: var(--radius-2xl);
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(15px);
        border: 3px solid rgba(255, 255, 255, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: var(--white);
        position: relative;
        flex-shrink: 0;
        box-shadow: var(--shadow-lg);
    }

    .edit-badge {
        position: absolute;
        top: -6px;
        right: -6px;
        width: 28px;
        height: 28px;
        background: var(--automotive-orange);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        color: var(--white);
        border: 2px solid var(--white);
        box-shadow: var(--shadow-md);
    }

    .header-info {
        flex: 1;
        min-width: 0;
    }

    .edit-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 var(--space-sm) 0;
        color: var(--white);
        letter-spacing: -0.025em;
        display: flex;
        align-items: center;
        gap: var(--space-md);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .edit-subtitle {
        font-size: 1rem;
        margin: 0 0 var(--space-md) 0;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 400;
    }

    .edit-meta {
        display: flex;
        gap: var(--space-lg);
        flex-wrap: wrap;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.95);
        background: rgba(255, 255, 255, 0.15);
        padding: var(--space-sm) var(--space-md);
        border-radius: var(--radius-lg);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    
    .notifications-container {
        padding: 0 var(--space-xl) var(--space-lg) var(--space-xl);
    }

    .notification {
        display: flex;
        align-items: flex-start;
        gap: var(--space-md);
        padding: var(--space-lg);
        border-radius: var(--radius-lg);
        margin-bottom: var(--space-md);
        position: relative;
        animation: slideInDown 0.3s ease;
        border-left: 4px solid;
        box-shadow: var(--shadow-md);
    }

    .notification.success {
        background: linear-gradient(135deg, var(--success-light) 0%, #f0fdf4 100%);
        border-left-color: var(--success-green);
    }

    .notification.error {
        background: linear-gradient(135deg, var(--error-light) 0%, #fef2f2 100%);
        border-left-color: var(--error-red);
    }

    .notification-icon {
        flex-shrink: 0;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .notification.success .notification-icon {
        color: var(--success-green);
    }

    .notification.error .notification-icon {
        color: var(--error-red);
    }

    .notification-content {
        flex: 1;
    }

    .notification-title {
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: var(--space-xs);
    }

    .notification.success .notification-title {
        color: var(--success-dark);
    }

    .notification.error .notification-title {
        color: var(--error-dark);
    }

    .notification-message {
        font-size: 0.85rem;
        line-height: 1.4;
    }

    .notification.success .notification-message {
        color: var(--success-dark);
    }

    .notification.error .notification-message {
        color: var(--error-dark);
    }

    .notification-close {
        background: none;
        border: none;
        color: var(--text-muted);
        cursor: pointer;
        padding: var(--space-xs);
        border-radius: var(--radius-md);
        transition: all var(--transition-fast);
    }

    .notification-close:hover {
        background: rgba(0, 0, 0, 0.1);
        color: var(--text-primary);
    }

    /* Premium Form Body */
    .premium-vehicle-edit-body {
        padding: var(--space-2xl);
        background: var(--cream);
    }

    .premium-vehicle-edit-form {
        max-width: 100%;
    }

    
    .validation-summary {
        background: linear-gradient(135deg, var(--error-light) 0%, #fef2f2 100%);
        color: var(--error-dark);
        padding: var(--space-lg);
        border-radius: var(--radius-lg);
        border-left: 4px solid var(--error-red);
        margin-bottom: var(--space-xl);
        box-shadow: var(--shadow-main);
    }

    
    .form-section {
        background: var(--white);
        border-radius: var(--radius-xl);
        padding: var(--space-xl);
        height: 100%;
        border: 1px solid var(--gray-200);
        transition: all var(--transition-normal);
        box-shadow: var(--shadow-light);
    }

    .form-section:hover {
        box-shadow: var(--shadow-main);
        transform: translateY(-3px);
        border-color: var(--primary-rose-light);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: var(--space-md);
        margin-bottom: var(--space-xl);
        padding-bottom: var(--space-lg);
        border-bottom: 2px solid var(--gray-200);
    }

    .section-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--white);
        flex-shrink: 0;
        box-shadow: var(--shadow-md);
    }

    .section-icon.vehicle-details {
        background: var(--gradient-vehicle);
    }

    .section-icon.rental-details {
        background: var(--gradient-rental);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    
    .form-group {
        margin-bottom: var(--space-xl);
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
