@model Carisma.Models.Vozilo
@{
    ViewData["Title"] = "Obriši vozilo";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Potvrda za brisanje kartica -->
            <div class="premium-delete-card">
                <!-- Zaglavlje -->
                <div class="premium-delete-header">
                    <div class="header-pattern"></div>
                    <div class="header-content">
                        <div class="delete-avatar">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="header-info">
                            <h1 class="delete-title">
                                <i class="fas fa-trash-alt"></i>
                                Potvrda brisanja
                            </h1>
                            <p class="delete-subtitle">Brisanje vozila iz sistema</p>
                            <div class="warning-badge">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Ova akcija se ne može poništiti</span>
                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="premium-delete-body">
                    <!-- Upozorenje -->
                    <div class="warning-alert">
                        <div class="alert-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="alert-content">
                            <div class="alert-title">Upozorenje!</div>
                            <div class="alert-message">Jeste li sigurni da želite obrisati ovo vozilo? Ova akcija će trajno ukloniti vozilo iz sistema.</div>
                        </div>
                    </div>

                    <!-- Detalji vozila -->
                    <div class="vehicle-details-section">
                        <div class="section-header">
                            <div class="section-icon">
                                <i class="fas fa-car"></i>
                            </div>
                            <h3 class="section-title">Detalji vozila za brisanje</h3>
                        </div>
                        
                        <div class="details-grid">
                            <!-- Marka vozila -->
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-tag"></i>
                                    <span>Marka</span>
                                </div>
                                <div class="detail-value">
                                    <div class="value-display brand">
                                        @Html.DisplayFor(model => model.Marka)
                                    </div>
                                </div>
                            </div>

                            <!-- Model vozila -->
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-car-side"></i>
                                    <span>Model</span>
                                </div>
                                <div class="detail-value">
                                    <div class="value-display model">
                                        @Html.DisplayFor(model => model.Model)
                                    </div>
                                </div>
                            </div>

                            <!-- Godina proizvodnje -->
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-calendar"></i>
                                    <span>Godina</span>
                                </div>
                                <div class="detail-value">
                                    <div class="value-display year">
                                        @Html.DisplayFor(model => model.Godina)
                                    </div>
                                </div>
                            </div>

                            <!-- Cijena po danu -->
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-money-bill"></i>
                                    <span>Cijena po danu</span>
                                </div>
                                <div class="detail-value">
                                    <div class="value-display price">
                                        <span class="price-amount">@Html.DisplayFor(model => model.CijenaPoDanu)</span>
                                        <span class="price-currency">BAM</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Vlasnik -->
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-user"></i>
                                    <span>Vlasnik</span>
                                </div>
                                <div class="detail-value">
                                    <div class="value-display owner">
                                        ID: @Html.DisplayFor(model => model.Osoba.Id)
                                    </div>
                                </div>
                            </div>

                            <!-- Status -->
                            <div class="detail-item">
                                <div class="detail-label">
                                    <i class="fas fa-flag"></i>
                                    <span>Status</span>
                                </div>
                                <div class="detail-value">
                                    @if (Model.Status == 0)
                                    {
                                        <div class="status-badge available">
                                            <i class="fas fa-check"></i>
                                            <span>Dostupno</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="status-badge unavailable">
                                            <i class="fas fa-times"></i>
                                            <span>Nedostupno</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    
                    <div class="actions-section">
                        <div class="actions-container">
                            <div class="actions-left">
                                <a asp-action="Index" class="btn-secondary-custom">
                                    <i class="fas fa-arrow-left"></i>
                                    <span>Nazad na listu</span>
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit-custom">
                                    <i class="fas fa-edit"></i>
                                    <span>Izmijeni</span>
                                </a>
                            </div>
                            
                            <div class="actions-right">
                                <form asp-action="Delete" class="delete-form">
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn-danger-custom" onclick="return confirm('Jeste li sigurni da želite obrisati ovo vozilo?')">
                                        <i class="fas fa-trash-alt"></i>
                                        <span>Obriši vozilo</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Vehicle Delete Theme - Glavna boja: #b16189 */
    :root {
        /*  glavna pink nijansa */
        --main-pink: #b16189;
        --main-pink-light: #c982a6;
        --main-pink-lighter: #e1a3c4;
        --main-pink-lightest: #f4d5e8;
        --main-pink-dark: #944e6f;
        --main-pink-darker: #773a55;
        
        /* Delete theme colors */
        --danger-red: #ef4444;
        --danger-light: #fee2e2;
        --danger-dark: #dc2626;
        
        --warning-yellow: #f59e0b;
        --warning-light: #fef3c7;
        --warning-dark: #d97706;
        
        --success-green: #10b981;
        --success-light: #d1fae5;
        --success-dark: #047857;
        
        /* Neutral colors */
        --white: #ffffff;
        --cream: #fefdfb;
        --light-gray: #f8fafc;
        --gray-100: #f1f5f9;
        --gray-200: #e2e8f0;
        --gray-300: #cbd5e1;
        --gray-400: #94a3b8;
        --gray-500: #64748b;
        --gray-600: #475569;
        --gray-700: #334155;
        --gray-800: #1e293b;
        --gray-900: #0f172a;
        
        /* Text boje */
        --text-primary: #1e293b;
        --text-secondary: #475569;
        --text-muted: #64748b;
        --text-inverse: #ffffff;
        
        /* Gradijenti */
        --gradient-danger: linear-gradient(135deg, var(--danger-red) 0%, var(--main-pink) 100%);
        --gradient-warning: linear-gradient(135deg, var(--warning-yellow) 0%, #d97706 100%);
        --gradient-success: linear-gradient(135deg, var(--success-green) 0%, #059669 100%);
        
        /* Senke */
        --shadow-danger: 0 4px 20px rgba(239, 68, 68, 0.15);
        --shadow-main: 0 4px 20px rgba(177, 97, 137, 0.15);
        --shadow-light: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        
        /* Tranzicije */
        --transition-fast: 0.15s ease;
        --transition-normal: 0.2s ease;
        --transition-slow: 0.3s ease;
        
        /* ivice */
        --radius-sm: 0.375rem;
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
        --radius-2xl: 1.5rem;
        
        /* razamaci */
        --space-xs: 0.25rem;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 1.5rem;
        --space-xl: 2rem;
        --space-2xl: 3rem;
    }

    
    .premium-delete-card {
        background: var(--white);
        border-radius: var(--radius-2xl);
        box-shadow: var(--shadow-xl);
        border: 1px solid var(--gray-200);
        overflow: hidden;
        margin-bottom: var(--space-xl);
    }

   
    .premium-delete-header {
        position: relative;
        background: var(--gradient-danger);
        padding: var(--space-2xl);
        color: var(--white);
        overflow: hidden;
    }

    .header-pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.15) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 40% 60%, rgba(255, 255, 255, 0.08) 0%, transparent 50%);
        pointer-events: none;
    }

    .header-content {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: var(--space-xl);
    }

    .delete-avatar {
        width: 80px;
        height: 80px;
        border-radius: var(--radius-2xl);
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border: 3px solid rgba(255, 255, 255, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--white);
        position: relative;
        flex-shrink: 0;
        box-shadow: var(--shadow-lg);
        animation: pulse 2s infinite;
    }

    .header-info {
        flex: 1;
        min-width: 0;
    }

    .delete-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 var(--space-sm) 0;
        color: var(--white);
        letter-spacing: -0.025em;
        display: flex;
        align-items: center;
        gap: var(--space-md);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .delete-subtitle {
        font-size: 1rem;
        margin: 0 0 var(--space-md) 0;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 400;
    }

    .warning-badge {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        background: rgba(255, 255, 255, 0.2);
        padding: var(--space-sm) var(--space-md);
        border-radius: var(--radius-lg);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        font-size: 0.9rem;
    }

    
    .premium-delete-body {
        padding: var(--space-2xl);
        background: var(--cream);
    }

    
    .warning-alert {
        display: flex;
        align-items: flex-start;
        gap: var(--space-md);
        padding: var(--space-lg);
        background: linear-gradient(135deg, var(--warning-light) 0%, #fed7aa 100%);
        border: 2px solid var(--warning-yellow);
        border-radius: var(--radius-xl);
        margin-bottom: var(--space-xl);
        box-shadow: var(--shadow-md);
    }

    .alert-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--warning-yellow);
        color: var(--white);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        flex-shrink: 0;
        animation: pulse 2s infinite;
    }

    .alert-content {
        flex: 1;
    }

    .alert-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--warning-dark);
        margin-bottom: var(--space-xs);
    }

    .alert-message {
        font-size: 0.95rem;
        color: var(--warning-dark);
        line-height: 1.5;
    }

    
    .vehicle-details-section {
        background: var(--white);
        border-radius: var(--radius-xl);
        padding: var(--space-xl);
        border: 1px solid var(--gray-200);
        box-shadow: var(--shadow-light);
        margin-bottom: var(--space-xl);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: var(--space-md);
        margin-bottom: var(--space-xl);
        padding-bottom: var(--space-lg);
        border-bottom: 2px solid var(--gray-200);
    }

    .section-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--radius-lg);
        background: var(--gradient-danger);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--white);
        flex-shrink: 0;
        box-shadow: var(--shadow-danger);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0;
    }

    
    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--space-lg);
    }

    .detail-item {
        background: var(--gray-50);
        padding: var(--space-lg);
        border-radius: var(--radius-lg);
        border: 1px solid var(--gray-200);
        transition: all var(--transition-normal);
    }

    .detail-item:hover {
        box-shadow: var(--shadow-md);
        transform: translateY(-2px);
    }

    .detail-label {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        margin-bottom: var(--space-md);
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .detail-label i {
        color: var(--main-pink);
        width: 16px;
    }

    .detail-value {
        display: flex;
        align-items: center;
    }

    .value-display {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        padding: var(--space-sm) var(--space-md);
        border-radius: var(--radius-md);
        background: var(--white);
        border: 2px solid var(--gray-200);
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        min-width: 100px;
        justify-content: center;
    }

    .value-display.brand {
        background: linear-gradient(135deg, var(--main-pink-lightest) 0%, var(--white) 100%);
        border-color: var(--main-pink-lighter);
        color: var(--main-pink-dark);
    }

    .value-display.model {
        background: linear-gradient(135deg, var(--gray-100) 0%, var(--white) 100%);
        border-color: var(--gray-300);
    }

    .value-display.year {
        background: linear-gradient(135deg, var(--gray-100) 0%, var(--white) 100%);
        border-color: var(--gray-300);
    }

    .value-display.price {
        background: linear-gradient(135deg, var(--success-light) 0%, var(--white) 100%);
        border-color: var(--success-green);
        color: var(--success-dark);
        font-weight: 700;
    }

    .price-currency {
        font-size: 0.9rem;
        background: var(--success-green);
        color: var(--white);
        padding: var(--space-xs) var(--space-sm);
        border-radius: var(--radius-sm);
        margin-left: var(--space-sm);
    }

    .value-display.owner {
        background: linear-gradient(135deg, var(--gray-100) 0%, var(--white) 100%);
        border-color: var(--gray-300);
        font-family: monospace;
    }

    
    .status-badge {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        padding: var(--space-sm) var(--space-md);
        border-radius: var(--radius-lg);
        font-weight: 600;
        border: 2px solid;
    }

    .status-badge.available {
        background: linear-gradient(135deg, var(--success-light) 0%, var(--white) 100%);
        color: var(--success-dark);
        border-color: var(--success-green);
    }

    .status-badge.unavailable {
        background: linear-gradient(135deg, var(--danger-light) 0%, var(--white) 100%);
        color: var(--danger-dark);
        border-color: var(--danger-red);
    }

    
    .actions-section {
        border-top: 3px solid;
        border-image: var(--gradient-danger) 1;
        padding-top: var(--space-xl);
    }

    .actions-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: var(--space-lg);
    }

    .actions-left,
    .actions-right {
        display: flex;
        gap: var(--space-md);
        align-items: center;
    }

    .delete-form {
        display: inline;
    }

    
    .btn-secondary-custom,
    .btn-edit-custom,
    .btn-danger-custom {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        padding: var(--space-md) var(--space-xl);
        border-radius: var(--radius-lg);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all var(--transition-normal);
        border: 2px solid;
        cursor: pointer;
        min-width: 140px;
        justify-content: center;
    }

    .btn-secondary-custom {
        background: var(--white);
        color: var(--text-secondary);
        border-color: var(--gray-300);
    }

    .btn-secondary-custom:hover {
        background: var(--gray-100);
        color: var(--text-primary);
        border-color: var(--gray-400);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        text-decoration: none;
    }

    .btn-edit-custom {
        background: var(--gradient-warning);
        color: var(--white);
        border-color: var(--warning-yellow);
    }

    .btn-edit-custom:hover {
        background: linear-gradient(135deg, var(--warning-dark) 0%, var(--warning-yellow) 100%);
        border-color: var(--warning-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        text-decoration: none;
    }

    .btn-danger-custom {
        background: var(--gradient-danger);
        color: var(--white);
        border-color: var(--danger-red);
        position: relative;
        overflow: hidden;
    }

    .btn-danger-custom::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn-danger-custom:hover::before {
        left: 100%;
    }

    .btn-danger-custom:hover {
        background: linear-gradient(135deg, var(--danger-dark) 0%, var(--main-pink-dark) 100%);
        border-color: var(--danger-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-danger);
    }

    /* Animacije */
    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.7;
        }
    }

    /* prilagodljivost */
    @@media (max-width: 768px) {
        .premium-delete-header {
            padding: var(--space-xl);
        }

        .header-content {
            flex-direction: column;
            text-align: center;
            gap: var(--space-lg);
        }

        .delete-title {
            font-size: 1.75rem;
            flex-direction: column;
            gap: var(--space-sm);
        }

        .premium-delete-body {
            padding: var(--space-xl);
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .actions-container {
            flex-direction: column;
            align-items: stretch;
        }

        .actions-left,
        .actions-right {
            width: 100%;
            justify-content: center;
        }

        .btn-secondary-custom,
        .btn-edit-custom,
        .btn-danger-custom {
            width: 100%;
            max-width: 300px;
        }
    }

    @@media (max-width: 576px) {
        .warning-alert {
            flex-direction: column;
            text-align: center;
            gap: var(--space-md);
        }

        .value-display {
            min-width: 80px;
            font-size: 1rem;
        }
    }
</style>