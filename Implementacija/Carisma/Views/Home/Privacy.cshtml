        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Header */
    .page-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(255, 105, 180, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #64748b;
        margin-bottom: 0.75rem;
    }

    .breadcrumb-item.active {
        color: #ff69b4;
        font-weight: 500;
    }

    .breadcrumb i {
        font-size: 0.75rem;
    }

    .page-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 0.5rem 0;
        letter-spacing: -0.025em;
    }

    .title-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #ff69b4, #ff1493);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
    }

    .page-description {
        color: #64748b;
        font-size: 1rem;
        margin: 0;
        line-height: 1.5;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .content-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(255, 105, 180, 0.12);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .content-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(255, 105, 180, 0.18);
    }

    .card-header {
        padding: 1.5rem 1.5rem 1rem;
        border-bottom: 1px solid rgba(255, 105, 180, 0.1);
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1e293b;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .card-title i {
        color: #ff69b4;
        font-size: 1rem;
    }

    .card-content {
        padding: 1.5rem;
    }

    .card-content p {
        color: #4a5568;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .privacy-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .privacy-list li {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 105, 180, 0.1);
        color: #4a5568;
        line-height: 1.5;
    }

    .privacy-list li:last-child {
        border-bottom: none;
    }

    .privacy-list li strong {
        color: #ff69b4;
    }

    .info-box {
        background: rgba(255, 105, 180, 0.08);
        border: 1px solid rgba(255, 105, 180, 0.2);
