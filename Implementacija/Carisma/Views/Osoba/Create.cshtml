@model Carisma.Models.Osoba

@{
    ViewData["Title"] = "Dodaj novog korisnika";
}

<div class="page-wrapper">
    <div class="page-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <div class="page-pretitle">
                        <a asp-action="Index" class="text-decoration-none">Korisnici</a>
                    </div>
                    <h2 class="page-title">Dodaj novog korisnika</h2>
                </div>
                <div class="col-auto ms-auto">
                    <div class="btn-list">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Nazad na listu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-action="Create" method="post">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Podaci o novom korisniku</h3>
                            </div>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Ime" class="form-label">Ime</label>
                                            <input asp-for="Ime" type="text" class="form-control" placeholder="Unesite ime">
                                            <span asp-validation-for="Ime" class="invalid-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Prezime" class="form-label">Prezime</label>
                                            <input asp-for="Prezime" type="text" class="form-control" placeholder="Unesite prezime">
                                            <span asp-validation-for="Prezime" class="invalid-feedback"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="korisnicko_ime" class="form-label">Korisničko ime</label>
                                            <input asp-for="korisnicko_ime" type="text" class="form-control" placeholder="Unesite korisničko ime">
                                            <span asp-validation-for="korisnicko_ime" class="invalid-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="email" class="form-label">Email adresa</label>
                                            <input asp-for="email" type="email" class="form-control" placeholder="korisnik@example.com">
                                            <span asp-validation-for="email" class="invalid-feedback"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="lozinka" class="form-label">Lozinka</label>
                                            <input asp-for="lozinka" type="password" class="form-control" placeholder="Unesite lozinku">
                                            <span asp-validation-for="lozinka" class="invalid-feedback"></span>
                                            <small class="form-hint">Ostavite prazno za automatsku lozinku</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="broj_telefona" class="form-label">Broj telefona</label>
                                            <input asp-for="broj_telefona" type="tel" class="form-control" placeholder="+387 xx xxx xxx">
                                            <span asp-validation-for="broj_telefona" class="invalid-feedback"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="uloga" class="form-label">Uloga</label>
                                            <select asp-for="uloga" class="form-select">
                                                <option value="">Izaberite ulogu...</option>
                                                <option value="@Carisma.Models.Uloga.RegistrovaniKorisnik">Registrovani korisnik</option>
                                                <option value="@Carisma.Models.Uloga.NeregistrovaniKorisnik">Neregistrovani korisnik</option>
                                                <option value="@Carisma.Models.Uloga.Administrator">Administrator</option>
                                            </select>
                                            <span asp-validation-for="uloga" class="invalid-feedback"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Status računa</label>
                                            <div>
                                                <label class="form-check">
                                                    <input asp-for="blokiran" class="form-check-input" type="checkbox">
                                                    <span class="form-check-label">Blokiraj račun odmah</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <a asp-action="Index" class="btn btn-link">Otkaži</a>
                                    <button type="submit" class="btn btn-primary ms-auto">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <line x1="12" y1="5" x2="12" y2="19"></line>
                                            <line x1="5" y1="12" x2="19" y2="12"></line>
                                        </svg>
                                        Kreiraj korisnika
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/@@tabler/core@1.0.0-beta17/dist/css/tabler.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/@@tabler/core@1.0.0-beta17/dist/js/tabler.min.js"></script>

<style>
    .page-wrapper {
        background: #f8f9fa;
        min-height: 100vh;
    }
    
    .page-header {
        background: white;
        border-bottom: 1px solid #e6e7e8;
        margin-bottom: 0;
    }
    
    .page-pretitle {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        line-height: 1.5;
        color: #6c7293;
    }
    
    .page-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        color: #2e3440;
        line-height: 1.5;
    }
    
    .card {
        border: 1px solid #e6e7e8;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}