                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Podrska") && !User.IsInRole("Administrator"))
                        {
                            <ul class="navbar-nav me-3">
                                <li class="nav-item dropdown notification-bell" id="notificationDropdown" style="display: none;">
