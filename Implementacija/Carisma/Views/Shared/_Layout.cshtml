                            {
                                @if (!User.IsInRole("Administrator"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Rezervacija" asp-action="Index">
                                            <i class="fas fa-calendar-check me-1"></i>Moje rezervacije
                                        </a>
                                    </li>
                                }

